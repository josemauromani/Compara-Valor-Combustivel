<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:gravity="center">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_bomba_combustivel"/>

    <TextView
        android:id="@+id/text_etanol"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginTop="30dp"
        android:text="Valor do Etanol"></TextView>

    <EditText
        android:id="@+id/valor_etanol"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:ems="10"
        android:inputType="numberDecimal" />

    <TextView
        android:id="@+id/text_gasolina"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginTop="20dp"
        android:text="Valor da Gasolina"></TextView>

    <EditText
        android:id="@+id/valor_gasolina"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:ems="10"
        android:inputType="numberDecimal" />

    <Button
        android:id="@+id/botao_calcular"
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        android:text="QUAL COMBUSTÍVEL DEVO ABASTECER?" />

    <TextView
        android:id="@+id/text_resultado"
        android:layout_width="wrap_content"
        android:textAlignment="center"
        android:textStyle="bold"
        android:layout_height="60dp"
        android:layout_marginTop="50dp"
        android:padding="15dp"
        android:textColor="@android:color/white"
        android:text=""></TextView>

</LinearLayout>
